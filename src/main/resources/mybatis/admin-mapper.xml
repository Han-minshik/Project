<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.AdminMapper">
    <!-- 책 등록 -->
    <insert id="insertBook">
        INSERT INTO book VALUES (NULL, #{title}, #{author}, #{publisher}, #{publicationDate},
                                 #{genre}, #{rating}, #{rentalState}, #{copiesAvailable}, #{detail},
                                 #{createdAt})
    </insert>
    <!-- 책 이미지 등록 -->
    <insert id="insertBookImages">
        # 책의 isbn과 image의 no는 ai기 때문에 같다
        <selectKey keyProperty="no" resultType="int" order="BEFORE">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO book_image VALUES
        <foreach collection="images" item="image" separator=",">
            (NULL, #{image.no}, #{image.originalFileName}, #{image.data})
        </foreach>
    </insert>
    <!-- 공지사항 등록 -->
    <insert id="createdAdminPost">
        INSERT INTO admin_post (title, content, created_at, updated_at, user_id)
        VALUES (#{title}, #{content}, DEFAULT, DEFAULT, #{userId})
    </insert>
    <!-- 특정 관리자의 post 찾기 -->
    <select id="getAdminPostById" resultType="AdminPostDTO">
        SELECT * FROM admin_post WHERE id = #{id}
    </select>
    <!-- 관리자 post 모두 찾기 -->
    <select id="getAllAdminPosts" resultType="AdminPostDTO">
        SELECT * FROM admin_post
    </select>
    <!-- post 수정 -->
    <update id="updateAdminPost">
        UPDATE admin_post
        SET title = #{title}, content = #{content}, updated_at = DEFAULT
        WHERE id = #{id}
    </update>
    <!-- 삭제  -->
    <delete id="deleteAdminPost">
        DELETE FROM admin_post WHERE id = #{id}
    </delete>
</mapper>
